#%Module 1.0 -*- tcl -*-
#
#  Module for use with 'environment-modules' package:
# 
set name [lrange [split [ module-info name ] / ] 0 0 ]
set dir_name MATHEMATICA
set version [ file tail [ module-info name ] ]
set module_extra_dir "[file dirname $ModulesCurrentModulefile]/../../applications-extra"

conflict mathematica

if { [info exists env(MATHEMATICA_ROOT)] } {
    set app_dir $env(MATHEMATICA_ROOT)
} else {
    if { [info exists env(KAUST_APPS_ROOT)] } {
	set app_dir $env(KAUST_APPS_ROOT)/MATHEMATICA/v$version.app
    } else {
	set app_dir /opt/share/MATHEMATICA/v$version.app
    }
}

source $env(KAUST_MODULES_ROOT)/common/common_setup.tcl
GeneralAppSetup

prepend-path PATH $app_dir/Executables
