#%Module 1.0 -*- tcl -*-
#
#  IDL module for use with 'environment-modules' package:
# 

set version [ file tail [ module-info name ] ]
set name IDL

if { [info exists env(IDL_ROOT)] } {
    set app_dir $env(IDL_ROOT)
} else {
    if { [info exists env(KAUST_APPS_ROOT)] } {
	set app_dir $env(KAUST_APPS_ROOT)/IDL
    } else {
	set app_dir /opt/share/IDL
    }
}

source $env(KAUST_MODULES_ROOT)/common/common_setup.tcl
GeneralAppSetup

setenv          LM_LICENSE_FILE         27030@license-lin1.kaust.edu.sa

set 		IDL_MOD 		$app_dir/v$version.app

setenv          IDL_MOD_PATH 	        $IDL_MOD

setenv 		IDL_DIR			$IDL_MOD/itt/idl71

prepend-path    IDL              	$IDL_MOD/itt/idl71/bin/idl

prepend-path    IDLDE              	$IDL_MOD/itt/idl71/bin/idlde

prepend-path    IDL_DEMO                $IDL_MOD/itt/idl71/bin/idldemo

prepend-path    IDL_HELP                $IDL_MOD/itt/idl71/bin/idlhelp

prepend-path    IDL_RPC                 $IDL_MOD/itt/idl71/bin/idlrpc

prepend-path    PATH                    $IDL_MOD/itt/idl71/bin 

puts stderr "Loaded $name version $version"



